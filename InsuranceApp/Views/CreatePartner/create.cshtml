@model InsuranceApp.Models.Partner

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Partner Entry</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2 class="mt-4">Enter New Partner</h2>
        <form asp-action="Create" asp-controller="CreatePartner" method="post" id="partnerForm">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <!-- First Name -->
            <div class="mb-3">
                <label for="FirstName" class="form-label">First Name</label>
                <input type="text" name="FirstName" id="FirstName" class="form-control" placeholder="Enter first name" />
                <span class="text-danger"></span>
            </div>

            <!-- Last Name -->
            <div class="mb-3">
                <label for="LastName" class="form-label">Last Name</label>
                <input type="text" name="LastName" id="LastName" class="form-control" placeholder="Enter last name" />
                <span class="text-danger"></span>
            </div>

            <!-- Address -->
            <div class="mb-3">
                <label for="Address" class="form-label">Address</label>
                <input type="text" name="Address" id="Address" class="form-control" placeholder="Enter address" />
                <span class="text-danger"></span>
            </div>

            <!-- Partner Number -->
            <div class="mb-3">
                <label for="PartnerNumber" class="form-label">Partner Number</label>
                <input type="text" name="PartnerNumber" id="PartnerNumber" class="form-control" placeholder="Enter partner number (20 characters)" minlength="20" maxlength="20" />
                <span class="text-danger"></span>
            </div>

            <!-- Partner Type -->
            <div class="mb-3">
                <label for="PartnerTypeId" class="form-label">Partner Type</label>
                <select name="PartnerTypeId" id="PartnerTypeId" class="form-control">
                    <option value="" disabled>Choose option</option>
                    <option value="1">Personal</option>
                    <option value="2">Legal</option>
                </select>
                <span class="text-danger"></span>
            </div>

            <!-- Croatian PIN -->
            <div class="mb-3">
                <label for="CroatianPIN" class="form-label">Tax Number (OIB)</label>
                <input type="text" name="CroatianPIN" id="CroatianPIN" class="form-control" placeholder="Enter tax number (OIB)" maxlength="11" />
                <span class="text-danger"></span>
            </div>

            <!-- City -->
            <div class="mb-3">
                <label for="CityId" class="form-label">City</label>
                <select name="CityId" id="CityId" class="form-control">
                    <option value="" disabled>Choose option</option>
                    @if (ViewBag.Cities != null)
                    {
                        var cities = ViewBag.Cities as IEnumerable<InsuranceApp.Models.City>;
                        if (cities != null)
                        {
                            foreach (var city in cities)
                            {
                                <option value="@city.CityId">@city.CityName</option>
                            }
                        }
                    }
                    else
                    {
                        <option value="1" selected>Zagreb</option> <!-- Default Zagreb -->
                    }
                </select>
                <span class="text-danger"></span>
            </div>

            <!-- Gender -->
            <div class="mb-3">
                <label for="Gender" class="form-label">Gender</label>
                <select name="Gender" id="Gender" class="form-control">
                    <option value="" disabled selected>Choose option</option>
                    <option value="M">Male</option>
                    <option value="F">Female</option>
                    <option value="N">Non-binary</option>
                </select>
                <span class="text-danger"></span>
            </div>

            <!-- Foreign Partner -->
            <div class="mb-3">
                <label for="IsForeign" class="form-label">Foreign Partner</label>
                <select name="IsForeign" id="IsForeign" class="form-control">
                    <option value="" disabled selected>Choose option </option>
                    <option value="false">No</option>
                    <option value="true">Yes</option>
                </select>
                <span class="text-danger"></span>
            </div>

            <!-- External Code -->
            <div class="mb-3">
                <label for="ExternalCode" class="form-label">External Code</label>
                <input type="text" name="ExternalCode" id="ExternalCode" class="form-control" placeholder="Enter external code (if any)" />
                <span class="text-danger"></span>
            </div>

            <!-- Created By User -->
            <div class="mb-3">
                <label for="CreateByUser" class="form-label">Created By User</label>
                <input type="text" name="CreateByUser" id="CreateByUser" class="form-control" value="admin@example.com" readonly />
                <span class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save Partner</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.11/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
